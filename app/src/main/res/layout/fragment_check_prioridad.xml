<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margenMaterial"
    android:id="@+id/checkprioridad_layout"
    tools:context=".componentes.componente_checkprioridad.CheckPrioridadFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margenMaterial">
        <TextView
            android:id="@+id/checkprioridad_pregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="n. texto de la pregunta"
            android:textColor="@color/colorIneiPrimary"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margenMaterial"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                app:cardBackgroundColor="@color/greyBluePrimary">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/checkprioridad_cabecera1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:text="cabecera1"
                        android:textColor="@color/colorIcons"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorIcons"/>
                    <TextView
                        android:id="@+id/checkprioridad_cabecera2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:text="Cabecera 2"
                        android:textColor="@color/colorIcons"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <include layout="@layout/check_prioridad_sp_layout" android:id="@+id/checkprioridad_sp1" android:visibility="gone"/>
            <include layout="@layout/check_prioridad_sp_layout" android:id="@+id/checkprioridad_sp2" android:visibility="gone"/>
            <include layout="@layout/check_prioridad_sp_layout" android:id="@+id/checkprioridad_sp3" android:visibility="gone"/>
            <include layout="@layout/check_prioridad_sp_layout" android:id="@+id/checkprioridad_sp4" android:visibility="gone"/>
            <include layout="@layout/check_prioridad_sp_layout" android:id="@+id/checkprioridad_sp5" android:visibility="gone"/>
            <include layout="@layout/check_prioridad_sp_layout" android:id="@+id/checkprioridad_sp6" android:visibility="gone"/>
            <include layout="@layout/check_prioridad_sp_layout" android:id="@+id/checkprioridad_sp7" android:visibility="gone"/>
            <include layout="@layout/check_prioridad_sp_layout" android:id="@+id/checkprioridad_sp8" android:visibility="gone"/>
            <include layout="@layout/check_prioridad_sp_layout" android:id="@+id/checkprioridad_sp9" android:visibility="gone"/>
            <include layout="@layout/check_prioridad_sp_layout" android:id="@+id/checkprioridad_sp10" android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>


