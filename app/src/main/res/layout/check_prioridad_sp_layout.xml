<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:minHeight="40dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="@dimen/margin5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/check_prioridad_sp_ck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="n. Subpregunta n"
                android:layout_marginRight="@dimen/margin5dp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/check_prioridad_sp_especifique"
                android:layout_width="400dp"
                android:layout_height="30dp"
                android:inputType="text"
                android:enabled="false"
                android:hint="Especifique"
                android:paddingLeft="@dimen/margin5dp"
                android:visibility="gone"
                android:background="@drawable/edittext_disabled"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="1dp"
        >
        <Spinner
            android:id="@+id/check_prioridad_sp_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAlignment="center"
            android:drawSelectorOnTop="true"/>
    </android.support.v7.widget.CardView>

</LinearLayout>